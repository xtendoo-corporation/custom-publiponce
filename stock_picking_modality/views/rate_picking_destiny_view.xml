<odoo>
    <data>
        <record id="action_rate_picking_destiny" model="ir.actions.act_window">
            <field name="name">Rate picking destiny</field>
            <field name="res_model">rate.picking.destiny</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_rate_picking_destiny_tree" model="ir.ui.view">
            <field name="name">rate.picking.destiny.tree</field>
            <field name="model">rate.picking.destiny</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_rate_picking_destiny_form" model="ir.ui.view">
            <field name="name">rate.picking.destiny.form</field>
            <field name="model">rate.picking.destiny</field>
            <field name="arch" type="xml">
                <form editable="top">
                    <group colspan="4">
                        <field name="name"/>
                        <field name="modality_price_ids" widget="one2many_tags">
                            <tree>
                                <field name="modality_id"/>
                                <field name="price"/>
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <menuitem id="rate_picking_destiny_menu"
                  name="Rate picking destiny"
                  parent="stock.menu_stock_warehouse_mgmt"
                  sequence="50"
                  action="action_rate_picking_destiny"/>
    </data>
</odoo>

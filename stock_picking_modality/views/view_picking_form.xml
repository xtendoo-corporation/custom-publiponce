<odoo>
    <data>
        <record id="view_stock_picking_line_custom" model="ir.ui.view">
            <field name="name">stock.picking.line.custom.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                       position="after">
                    <field name="modality_id"/>
                    <field name="price"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
